<PropertyList>
	
	<filter>
		<name>A/THR Knots Input Gain</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<input>/it-autoflight/input/kts</input>
		<output>/it-autoflight/internal/athr-kts-cmd</output>
		<min>
			<expression>
				<max>
					<property>/fdm/jsbsim/dfgs/speeds/vmin</property>
					<difference>
						<property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
						<value>25</value>
					</difference>
				</max>
			</expression>
		</min>
		<max>
			<expression>
				<max>
					<property>/fdm/jsbsim/dfgs/speeds/vmo-mmo</property>
					<sum>
						<property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
						<value>25</value>
					</sum>
				</max>
			</expression>
		</max>
	</filter>
	
	<filter>
		<name>A/THR Knots Input Filter</name>
		<debug>false</debug>
		<type>noise-spike</type>
		<initialize-to>output</initialize-to>
		<input>/it-autoflight/internal/athr-kts-cmd</input>
		<output>/it-autoflight/internal/athr-kts</output>
		<max-rate-of-change>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-autoflight/input/kts-mach</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<value>10</value>
		</max-rate-of-change>
		<max-rate-of-change>200</max-rate-of-change>
	</filter>
	
	<filter>
		<name>A/THR Mach Input Gain</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<input>/it-autoflight/input/mach</input>
		<output>/it-autoflight/internal/athr-mach-cmd</output>
		<min>
			<expression>
				<max>
					<property>/fdm/jsbsim/dfgs/speeds/vmin-mach</property>
					<difference>
						<property>/instrumentation/airspeed-indicator/indicated-mach</property>
						<value>0.045</value>
					</difference>
				</max>
			</expression>
		</min>
		<max>
			<expression>
				<max>
					<value>0.84</value>
					<sum>
						<property>/instrumentation/airspeed-indicator/indicated-mach</property>
						<value>0.045</value>
					</sum>
				</max>
			</expression>
		</max>
	</filter>
	
	<filter>
		<name>A/THR Mach Input Filter</name>
		<debug>false</debug>
		<type>noise-spike</type>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<input>/it-autoflight/internal/athr-mach-cmd</input>
		<output>/it-autoflight/internal/athr-mach</output>
		<max-rate-of-change>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-autoflight/input/kts-mach</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/gear/gear[1]/wow</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/gear/gear[2]/wow</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
			<value>0.08</value>
		</max-rate-of-change>
		<max-rate-of-change>2</max-rate-of-change>
	</filter>
	
	<pid-controller>
		<name>IT-CONTROLLER: Knots</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/input/kts-mach</property>
						<value>0</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>/instrumentation/airspeed-indicator/indicated-speed-kt</input>
		<reference>/it-autoflight/internal/athr-kts</reference>
		<output>/fdm/jsbsim/engine/ats-cmd-raw-pid</output>
		<config>
			<Kp>0.06</Kp>
			<Ti>9.0</Ti>
			<Td>0.00001</Td>
			<u_min>/fdm/jsbsim/engine/limit/idle-norm</u_min>
			<u_max>/fdm/jsbsim/engine/limit/active-norm</u_max>
		</config>
	</pid-controller>
	
	<pid-controller>
		<name>IT-CONTROLLER: Mach</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/input/kts-mach</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/instrumentation/airspeed-indicator/indicated-mach</property>
			<scale>1000</scale>
		</input>
		<reference>
			<property>/it-autoflight/internal/athr-mach</property>
			<scale>1000</scale>
		</reference>
		<output>/fdm/jsbsim/engine/ats-cmd-raw-pid</output>
		<config>
			<Kp>0.06</Kp>
			<Ti>9.0</Ti>
			<Td>0.00001</Td>
			<u_min>/fdm/jsbsim/engine/limit/idle-norm</u_min>
			<u_max>/fdm/jsbsim/engine/limit/active-norm</u_max>
		</config>
	</pid-controller>
	
	<filter>
		<name>Speed/Mach Filter</name>
		<debug>false</debug>
		<type>noise-spike</type>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>/fdm/jsbsim/engine/ats-cmd-raw-pid</input>
		<output>/fdm/jsbsim/engine/ats-cmd-raw</output>
		<max-rate-of-change>0.3</max-rate-of-change>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: Idle Limit</name>
		<debug>false</debug>
		<type>noise-spike</type>
		<initialize-to>output</initialize-to>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>1</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>0</input>
		<output>/fdm/jsbsim/engine/ats-cmd-raw</output>
		<max-rate-of-change>0.05</max-rate-of-change> <!-- RETARD mode is very slow apparently -->
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: Thrust Limit</name>
		<debug>false</debug>
		<type>noise-spike</type>
		<initialize-to>output</initialize-to>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>2</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>/fdm/jsbsim/engine/limit/active-norm</input>
		<output>/fdm/jsbsim/engine/ats-cmd-raw</output>
		<max-rate-of-change>0.15</max-rate-of-change>
	</filter>
	
	<filter>
		<name>Power Norm Engine 1</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<expression> <!-- EPR non-linearity makes it hard -->
				<table>
					<property>/engines/engine[0]/n1-actual</property>
					<entry><ind> 25.3</ind><dep>0</dep></entry>
					<entry><ind>101.6</ind><dep>1</dep></entry>
				</table>
			</expression>
		</input>
		<output>/fdm/jsbsim/engine/power-norm[0]</output>
	</filter>
	
	<filter>
		<name>Power Norm Engine 2</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<expression> <!-- EPR non-linearity makes it hard -->
				<table>
					<property>/engines/engine[1]/n1-actual</property>
					<entry><ind> 25.3</ind><dep>0</dep></entry>
					<entry><ind>101.6</ind><dep>1</dep></entry>
				</table>
			</expression>
		</input>
		<output>/fdm/jsbsim/engine/power-norm[1]</output>
	</filter>
	
	<pid-controller>
		<name>System Command: Throttle 1</name> <!-- Simulates EPR "hunting" -->
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<not-equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>3</value> <!-- Clamp -->
					</not-equals>
				</and>
			</condition>
		</enable>
		<input>/fdm/jsbsim/engine/power-norm[0]</input>
		<reference>/fdm/jsbsim/engine/ats-cmd-raw</reference>
		<output>/fdm/jsbsim/engine/ats-cmd[0]</output>
		<config>
			<Kp>0.9</Kp>
			<Ti>0.75</Ti>
			<Td>0.0</Td>
			<u_min>
				<expression>
					<max>
						<difference>
							<property>/fdm/jsbsim/engine/power-norm[0]</property>
							<value>0.2</value>
						</difference>
						<value>0</value>
					</max>
				</expression>
			</u_min>
			<u_max>
				<expression>
					<min>
						<sum>
							<property>/fdm/jsbsim/engine/power-norm[0]</property>
							<value>0.2</value>
						</sum>
						<value>1</value>
					</min>
				</expression>
			</u_max>
		</config>
	</pid-controller>
	
	<pid-controller>
		<name>System Command: Throttle 2</name> <!-- Simulates EPR "hunting" -->
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<not-equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>3</value> <!-- Clamp -->
					</not-equals>
				</and>
			</condition>
		</enable>
		<input>/fdm/jsbsim/engine/power-norm[1]</input>
		<reference>/fdm/jsbsim/engine/ats-cmd-raw</reference>
		<output>/fdm/jsbsim/engine/ats-cmd[1]</output>
		<config>
			<Kp>0.9</Kp>
			<Ti>0.75</Ti>
			<Td>0.0</Td>
			<u_min>
				<expression>
					<max>
						<difference>
							<property>/fdm/jsbsim/engine/power-norm[1]</property>
							<value>0.2</value>
						</difference>
						<value>0</value>
					</max>
				</expression>
			</u_min>
			<u_max>
				<expression>
					<min>
						<sum>
							<property>/fdm/jsbsim/engine/power-norm[1]</property>
							<value>0.2</value>
						</sum>
						<value>1</value>
					</min>
				</expression>
			</u_max>
		</config>
	</pid-controller>
	
	<filter>
		<name>System Command: Throttle Comparator</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<expression>
				<max>
					<property>/fdm/jsbsim/engine/throttle-lever[0]</property>
					<property>/fdm/jsbsim/engine/throttle-lever[1]</property>
				</max>
			</expression>
		</input>
		<output>/fdm/jsbsim/engine/throttle-compare-max</output>
	</filter>
	
	<filter>
		<name>System Command: Throttle Inactive Sync</name>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<or>
					<not-equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</not-equals>
					<equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>3</value> <!-- Clamp -->
					</equals>
				</or>
			</condition>
		</enable>
		<input>/fdm/jsbsim/engine/throttle-compare-max</input>
		<output>/fdm/jsbsim/engine/ats-cmd[0]</output>
		<output>/fdm/jsbsim/engine/ats-cmd[1]</output>
		<output>/fdm/jsbsim/engine/ats-cmd-raw</output>
	</filter>
	
	<!-- Engine 1 -->
	<filter>
		<name>System Command: Throttle 1 Filter</name>
		<debug>false</debug>
		<type>noise-spike</type>
		<initialize-to>output</initialize-to>
		<input>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<not-equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>3</value> <!-- Clamp -->
					</not-equals>
				</and>
			</condition>
			<property>/fdm/jsbsim/engine/ats-cmd[0]</property>
		</input>
		<input>/fdm/jsbsim/engine/throttle-lever[0]</input>
		<output>/fdm/jsbsim/engine/ats-cmd-1</output>
		<max-rate-of-change>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<not-equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>3</value> <!-- Clamp -->
					</not-equals>
				</and>
			</condition>
			<value>0.2</value>
		</max-rate-of-change>
		<max-rate-of-change>100</max-rate-of-change>
	</filter>
	
	<filter>
		<name>System Command: Throttle Backdrive 1</name>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<not-equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>3</value> <!-- Clamp -->
					</not-equals>
				</and>
			</condition>
		</enable>
		<input>/fdm/jsbsim/engine/ats-cmd-1</input>
		<output>/controls/engines/engine[0]/throttle</output>
	</filter>
	
	<!-- Engine 2 -->
	<filter>
		<name>System Command: Throttle 2 Filter</name>
		<debug>false</debug>
		<type>noise-spike</type>
		<initialize-to>output</initialize-to>
		<input>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<not-equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>3</value> <!-- Clamp -->
					</not-equals>
				</and>
			</condition>
			<property>/fdm/jsbsim/engine/ats-cmd[1]</property>
		</input>
		<input>/fdm/jsbsim/engine/throttle-lever[1]</input>
		<output>/fdm/jsbsim/engine/ats-cmd-2</output>
		<max-rate-of-change>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<not-equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>3</value> <!-- Clamp -->
					</not-equals>
				</and>
			</condition>
			<value>0.2</value>
		</max-rate-of-change>
		<max-rate-of-change>100</max-rate-of-change>
	</filter>
	
	<filter>
		<name>System Command: Throttle Backdrive 2</name>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/it-autoflight/output/athr</property>
						<value>1</value>
					</equals>
					<not-equals>
						<property>/it-autoflight/output/thr-mode</property>
						<value>3</value> <!-- Clamp -->
					</not-equals>
				</and>
			</condition>
		</enable>
		<input>/fdm/jsbsim/engine/ats-cmd-2</input>
		<output>/controls/engines/engine[1]/throttle</output>
	</filter>

</PropertyList>
