<PropertyList>
	
	<filter>
		<name>CRT Contrast</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<expression>
				<table>
					<property>/rendering/scene/diffuse/red</property>
					<entry><ind>0.8</ind><dep>0.85</dep></entry>
					<entry><ind>0.0</ind><dep>0.96</dep></entry>
				</table>
			</expression>
		</input>
		<output>/instrumentation/du/crt-contrast</output>
	</filter>
	
	<filter>
		<name>Mach Slow</name>
		<update-interval-secs>1.0</update-interval-secs>
		<type>gain</type>
		<gain>1.0</gain>
		<input>/instrumentation/airspeed-indicator/indicated-mach</input>
		<output>/instrumentation/airspeed-indicator/indicated-mach-slow</output>
	</filter>
	
	<!-- RMI -->
	<filter>
		<name>RMI 1 NAV 1 Error</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<property>/instrumentation/nav[0]/in-range</property>
			</condition>
			<property>/instrumentation/nav[0]/heading-deg</property>
			<offset>
				<property>/instrumentation/rmi[0]/heading-true-input</property>
				<scale>-1.0</scale>
			</offset>
		</input>
		<input>0</input>
		<output>/instrumentation/rmi[0]/nav1-error</output>
		<period>
			<min>-180</min>
			<max>180</max>
		</period>
	</filter>
	
	<filter>
		<name>RMI 1 NAV 2 Error</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<property>/instrumentation/nav[1]/in-range</property>
			</condition>
			<property>/instrumentation/nav[1]/heading-deg</property>
			<offset>
				<property>/instrumentation/rmi[0]/heading-true-input</property>
				<scale>-1.0</scale>
			</offset>
		</input>
		<input>0</input>
		<output>/instrumentation/rmi[0]/nav2-error</output>
		<period>
			<min>-180</min>
			<max>180</max>
		</period>
	</filter>
	
	<filter>
		<name>RMI 2 NAV 1 Error</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<property>/instrumentation/nav[0]/in-range</property>
			</condition>
			<property>/instrumentation/nav[0]/heading-deg</property>
			<offset>
				<property>/instrumentation/rmi[1]/heading-true-input</property>
				<scale>-1.0</scale>
			</offset>
		</input>
		<input>0</input>
		<output>/instrumentation/rmi[1]/nav1-error</output>
		<period>
			<min>-180</min>
			<max>180</max>
		</period>
	</filter>
	
	<filter>
		<name>RMI 2 NAV 2 Error</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<property>/instrumentation/nav[1]/in-range</property>
			</condition>
			<property>/instrumentation/nav[1]/heading-deg</property>
			<offset>
				<property>/instrumentation/rmi[1]/heading-true-input</property>
				<scale>-1.0</scale>
			</offset>
		</input>
		<input>0</input>
		<output>/instrumentation/rmi[1]/nav2-error</output>
		<period>
			<min>-180</min>
			<max>180</max>
		</period>
	</filter>
	
	<filter>
		<name>RMI ADF 2 Error</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<property>/instrumentation/adf[0]/in-range</property>
			</condition>
			<property>/instrumentation/adf[0]/indicated-bearing-deg</property>
		</input>
		<input>0</input>
		<output>/instrumentation/rmi[0]/adf1-error</output>
		<output>/instrumentation/rmi[1]/adf1-error</output>
		<period>
			<min>-180</min>
			<max>180</max>
		</period>
	</filter>
	
	<filter>
		<name>RMI ADF 2 Error</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<property>/instrumentation/adf[1]/in-range</property>
			</condition>
			<property>/instrumentation/adf[1]/indicated-bearing-deg</property>
		</input>
		<input>0</input>
		<output>/instrumentation/rmi[0]/adf2-error</output>
		<output>/instrumentation/rmi[1]/adf2-error</output>
		<period>
			<min>-180</min>
			<max>180</max>
		</period>
	</filter>
	
	<!-- ND DME -->
	<filter>
		<name>ND 1 VOR ADF 1</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<property>/instrumentation/rmi[0]/vor-adf-1</property>
			</condition>
			<value>1</value>
		</input>
		<input>-1</input>
		<output>/instrumentation/efis[0]/inputs/lh-vor-adf</output>
	</filter>
	
	<filter>
		<name>ND 1 VOR ADF 2</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<property>/instrumentation/rmi[0]/vor-adf-2</property>
			</condition>
			<value>1</value>
		</input>
		<input>-1</input>
		<output>/instrumentation/efis[0]/inputs/rh-vor-adf</output>
	</filter>
	
	<filter>
		<name>ND 1 VOR ADF 1</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<property>/instrumentation/rmi[1]/vor-adf-1</property>
			</condition>
			<value>1</value>
		</input>
		<input>-1</input>
		<output>/instrumentation/efis[1]/inputs/lh-vor-adf</output>
	</filter>
	
	<filter>
		<name>ND 2 VOR ADF 2</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<property>/instrumentation/rmi[1]/vor-adf-2</property>
			</condition>
			<value>1</value>
		</input>
		<input>-1</input>
		<output>/instrumentation/efis[1]/inputs/rh-vor-adf</output>
	</filter>
	
	<!-- DME -->
	<filter>
		<name>DME 1</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<property>instrumentation/hsi[0]/slaved-to-gps</property>
			</condition>
			<expression>
				<floor>
					<sum>
						<product>
							<property>/autopilot/route-manager/wp[0]/dist</property>
							<value>10</value>
						</product>
						<value>0.5</value>
					</sum>
				</floor>
			</expression>
		</input>
		<input>
			<expression>
				<floor>
					<sum>
						<product>
							<property>/instrumentation/dme[0]/indicated-distance-nm</property>
							<value>10</value>
						</product>
						<value>0.5</value>
					</sum>
				</floor>
			</expression>
		</input>
		<output>/instrumentation/dme[0]/indicated-distance-nm-x10</output>
		<max>9999</max>
	</filter>
	
	<filter>
		<name>DME 2</name>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<condition>
				<property>instrumentation/hsi[1]/slaved-to-gps</property>
			</condition>
			<expression>
				<floor>
					<sum>
						<product>
							<property>/autopilot/route-manager/wp[0]/dist</property>
							<value>10</value>
						</product>
						<value>0.5</value>
					</sum>
				</floor>
			</expression>
		</input>
		<input>
			<expression>
				<floor>
					<sum>
						<product>
							<property>/instrumentation/dme[1]/indicated-distance-nm</property>
							<value>10</value>
						</product>
						<value>0.5</value>
					</sum>
				</floor>
			</expression>
		</input>
		<output>/instrumentation/dme[1]/indicated-distance-nm-x10</output>
		<max>9999</max>
	</filter>
	
	<logic>
		<input>
			<or>
				<and>
					<not><property>instrumentation/hsi[0]/slaved-to-gps</property></not>
					<greater-than-equals>
						<property>systems/electrical/outputs/nav[0]</property>
						<value>24</value>
					</greater-than-equals>
					<property>instrumentation/dme[0]/in-range</property>
				</and>
				<and>
					<property>instrumentation/hsi[0]/slaved-to-gps</property>
					<property>autopilot/route-manager/active</property>
				</and>
			</or>
		</input>
		<output>/instrumentation/dme[0]/available</output>
	</logic>
	
	<logic>
		<input>
			<or>
				<and>
					<not><property>instrumentation/hsi[1]/slaved-to-gps</property></not>
					<greater-than-equals>
						<property>systems/electrical/outputs/nav[1]</property>
						<value>24</value>
					</greater-than-equals>
					<property>instrumentation/dme[1]/in-range</property>
				</and>
				<and>
					<property>instrumentation/hsi[1]/slaved-to-gps</property>
					<property>autopilot/route-manager/active</property>
				</and>
			</or>
		</input>
		<output>/instrumentation/dme[1]/available</output>
	</logic>

</PropertyList>
