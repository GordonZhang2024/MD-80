			<property>/instrumentation/nav[1]/heading-deg</property>
			<offset>
				<property>/instrumentation/rmi[0]/heading-true-input</property>
				<scale>-1.0</scale>
			</offset>
		</input>
		<input>0</input>
		<output>/instrumentation/rmi[0]/nav2-error</output>
		<period>
			<min>-180</min>
			<max>180</max>
		</period>
	</filter>
	
