				<property>/instrumentation/rmi[1]/heading-true-input</property>
				<scale>-1.0</scale>
			</offset>
		</input>
		<input>0</input>
		<output>/instrumentation/rmi[1]/nav1-error</output>
		<period>
			<min>-180</min>
			<max>180</max>
		</period>
	</filter>
	
