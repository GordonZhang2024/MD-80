<PropertyList>
	
	<main include="MD-87-main.xml" omit-node="y"/>
	
	<nasal>
		<load>
			var livery_update = aircraft.livery_update.new("Aircraft/MD-80/Models/Liveries/MD-87");
		</load>
		<unload>
			livery_update.stop();
		</unload>
	</nasal>
	
	<animation>
		<type>material</type>
		<object-name>Fuselage</object-name>
		<object-name>LGNDoorAftL</object-name>
		<object-name>LGNDoorAftR</object-name>
		<object-name>LGNDoorForL</object-name>
		<object-name>LGNDoorForR</object-name>
		<property-base>sim/model/livery</property-base>
		<texture-prop>texture</texture-prop>
		<texture>txt_fuselage_87.png</texture>
	</animation>
	<animation>
		<type>material</type>
		<object-name>LGDoorInL</object-name>
		<object-name>LGDoorInR</object-name>
		<object-name>WingFairing</object-name>
		<property-base>sim/model/fairings</property-base>
		<texture-prop>texture</texture-prop>
		<texture>txt_fuselage_fairing.png</texture>
	</animation>
	<animation>
		<type>material</type>
		<object-name>Engines</object-name>
		<object-name>Rudder</object-name>
		<object-name>RudderTabControl</object-name>
		<object-name>StabFairing</object-name>
		<object-name>VStabilizer</object-name>
		<property-base>sim/model/rudders</property-base>
		<texture-prop>texture</texture-prop>
		<texture>txt_vstab_engines.png</texture>
	</animation>
	
	<model>
		<name>Instruments</name>
		<path>Aircraft/MD-80/Models/MD-87-instruments.xml</path>
		<offsets>
			<x-m>2.9</x-m>
		</offsets>
	</model>

</PropertyList>
