<PropertyList>
	
	<path>hsi.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>LightingGroup</object-name>
		<emission>
			<red>1.0</red>
			<green>0.4</green>
			<blue>0.1</blue>
			<factor-prop>controls/lighting/main-integ-norm</factor-prop>
		</emission>
	</animation>
	
	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>HSI.hdgbug</object-name>
	</effect>
	
	<animation>
		<type>material</type>
		<object-name>Display</object-name>
		<emission>
			<red>1.0</red>
			<green>1.0</green>
			<blue>1.0</blue>
			<factor-prop>controls/lighting/main-digital-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Display</object-name>
		<condition>
			<and>
				<greater-than-equals>
					<property>systems/electrical/outputs/efis</property>
					<value>25</value>
				</greater-than-equals>
				<greater-than>
					<property>controls/lighting/main-digital-norm</property>
					<value>0.01</value>
				</greater-than>
			</and>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>gs.needle</object-name>
		<condition>
			<and>
				<greater-than-equals>
					<property>systems/electrical/outputs/efis</property>
					<value>25</value>
				</greater-than-equals>
				<property>instrumentation/nav[0]/gs-in-range</property>
				<property>instrumentation/nav[0]/has-gs</property>
				<greater-than>
					<property>instrumentation/nav[0]/signal-quality-norm</property>
					<value>0.99</value>
				</greater-than>
			</and>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>navflag</object-name>
		<condition>
			<or>
				<less-than>
					<property>systems/electrical/outputs/efis</property>
					<value>25</value>
				</less-than>
				<less-than>
					<property>systems/electrical/outputs/nav[0]</property>
					<value>25</value>
				</less-than>
				<not><property>instrumentation/nav[0]/in-range</property></not>
			</or>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>toflag</object-name>
		<condition>
			<property>instrumentation/nav[0]/to-flag</property>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>fromflag</object-name>
		<condition>
			<property>instrumentation/nav[0]/from-flag</property>
		</condition>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>HSI.card</object-name>
		<object-name>HSI.crsneedle</object-name>
		<object-name>HSI.crsdeflection</object-name>
		<object-name>toflag</object-name>
		<object-name>fromflag</object-name>
		<object-name>HSI.hdgbug</object-name>
		<property>orientation/heading-magnetic-deg</property>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>HSI.crsneedle</object-name>
		<object-name>HSI.crsdeflection</object-name>
		<object-name>toflag</object-name>
		<object-name>fromflag</object-name>
		<property>instrumentation/nav[0]/radials/selected-deg</property>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>translate</type>
		<object-name>HSI.crsdeflection</object-name>
		<property>instrumentation/nav[0]/heading-needle-deflection-norm</property>
		<factor>0.0172</factor>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>HSI.hdgbug</object-name>
		<property>it-autoflight/input/hdg</property>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>translate</type>
		<object-name>gs.needle</object-name>
		<property>instrumentation/nav[0]/gs-needle-deflection-norm</property>
		<factor>0.0277</factor>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>
	
	<!-- DME 1 -->
	<animation>
		<type>select</type>
		<object-name>DME1.1</object-name>
		<object-name>DME1.2</object-name>
		<object-name>DME1.3</object-name>
		<object-name>DME1.4</object-name>
		<object-name>DME1.dot</object-name>
		<condition>
			<and>
				<greater-than-equals>
					<property>systems/electrical/outputs/dme[0]</property>
					<value>25</value>
				</greater-than-equals>
				<property>instrumentation/dme[0]/in-range</property>
			</and>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>DME1.dash</object-name>
		<condition>
			<or>
				<less-than>
					<property>systems/electrical/outputs/dme[0]</property>
					<value>25</value>
				</less-than>
				<not><property>instrumentation/dme[0]/in-range</property></not>
			</or>
		</condition>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>DME1.1</object-name>
		<property>instrumentation/dme[0]/indicated-distance-nm-x10</property>
		<factor>0.0001</factor>
		<step>1000</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>DME1.2</object-name>
		<property>instrumentation/dme[0]/indicated-distance-nm-x10</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>DME1.3</object-name>
		<property>instrumentation/dme[0]/indicated-distance-nm-x10</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>DME1.4</object-name>
		<property>instrumentation/dme[0]/indicated-distance-nm-x10</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<!-- DME 2 -->
	<animation>
		<type>select</type>
		<object-name>DME2.1</object-name>
		<object-name>DME2.2</object-name>
		<object-name>DME2.3</object-name>
		<object-name>DME2.4</object-name>
		<object-name>DME2.dot</object-name>
		<condition>
			<and>
				<greater-than-equals>
					<property>systems/electrical/outputs/dme[0]</property>
					<value>25</value>
				</greater-than-equals>
				<property>instrumentation/dme[1]/in-range</property>
			</and>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>DME2.dash</object-name>
		<condition>
			<or>
				<less-than>
					<property>systems/electrical/outputs/dme[0]</property>
					<value>25</value>
				</less-than>
				<not><property>instrumentation/dme[1]/in-range</property></not>
			</or>
		</condition>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>DME2.1</object-name>
		<property>instrumentation/dme[1]/indicated-distance-nm-x10</property>
		<factor>0.0001</factor>
		<step>1000</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>DME2.2</object-name>
		<property>instrumentation/dme[1]/indicated-distance-nm-x10</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>DME2.3</object-name>
		<property>instrumentation/dme[1]/indicated-distance-nm-x10</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>DME2.4</object-name>
		<property>instrumentation/dme[1]/indicated-distance-nm-x10</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

</PropertyList>