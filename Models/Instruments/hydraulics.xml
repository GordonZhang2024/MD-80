<PropertyList>
	
	<path>hydraulics.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>Integrity</object-name>
		<emission>
			<red>1.0</red>
			<green>0.6</green>
			<blue>0.3</blue>
			<factor-prop>controls/lighting/fo-panel-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>transHydSwitch</object-name>
		<property>/controls/cockpit/hyd-trans</property>
		<interpolation>
			<entry><ind>0</ind><dep>-30</dep></entry>
			<entry><ind>1</ind><dep> 30</dep></entry>
		</interpolation>   
		<center>
			<x-m>0.00316</x-m>
			<y-m>0</y-m>
			<z-m>-0.00281</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>transHydSwitch</object-name>
		<action>
			<button>0</button>
			<button>1</button>
			<button>3</button>
			<button>4</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-cycle</command>
				<property>/controls/hydraulics/switches/trans</property>
				<value>0</value>
				<value>1</value>
			</binding>
			<binding>
				<command>nasal</command>
				<script>libraries.Sound.switch1();</script>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>eng1HydSwitch</object-name>
		<property>/controls/cockpit/hyd-l-pump</property>
		<interpolation>
			<entry><ind>0</ind><dep>-30</dep></entry>
			<entry><ind>2</ind><dep> 30</dep></entry>
		</interpolation>   
		<center>
			<x-m>0.00316</x-m>
			<y-m>0</y-m>
			<z-m>-0.00352</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>eng1HydSwitch</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-cycle</command>
				<property>/controls/hydraulics/switches/l-pump</property>
				<value>0</value>
				<value>1</value>
				<value>2</value>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-cycle</command>
				<property>/controls/hydraulics/switches/l-pump</property>
				<value>2</value>
				<value>1</value>
				<value>0</value>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>eng2HydSwitch</object-name>
		<property>/controls/cockpit/hyd-r-pump</property>
		<interpolation>
			<entry><ind>0</ind><dep>-30</dep></entry>
			<entry><ind>2</ind><dep> 30</dep></entry>
		</interpolation>   
		<center>
			<x-m>0.00316</x-m>
			<y-m>0</y-m>
			<z-m>-0.00352</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>eng2HydSwitch</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-cycle</command>
				<property>/controls/hydraulics/switches/r-pump</property>
				<value>0</value>
				<value>1</value>
				<value>2</value>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-cycle</command>
				<property>/controls/hydraulics/switches/r-pump</property>
				<value>2</value>
				<value>1</value>
				<value>0</value>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>auxHydSwitch</object-name>
		<property>/controls/cockpit/hyd-aux-pump</property>
		<interpolation>
			<entry><ind>-1</ind><dep>-30</dep></entry>
			<entry><ind> 1</ind><dep> 30</dep></entry>
		</interpolation>   
		<center>
			<x-m>0.00316</x-m>
			<y-m>0</y-m>
			<z-m>-0.00352</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>auxHydSwitch</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-cycle</command>
				<property>/controls/hydraulics/switches/aux-pump</property>
				<value>-1</value>
				<value>0</value>
				<value>1</value>
			</binding>
			<binding>
				<command>nasal</command>
				<script>libraries.Sound.switch1();</script>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-cycle</command>
				<property>/controls/hydraulics/switches/aux-pump</property>
				<value>1</value>
				<value>0</value>
				<value>-1</value>
			</binding>
			<binding>
				<command>nasal</command>
				<script>libraries.Sound.switch1();</script>
			</binding>
		</action>
	</animation>

</PropertyList>
