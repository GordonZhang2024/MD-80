					<command>property-assign</command>
					<property>instrumentation/efis[0]/wpt-btn</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>BtnWpt</object-name>
		<object-name>TextWpt</object-name>
		<property>instrumentation/efis[0]/wpt-btn</property>
		<factor>-0.002</factor>
