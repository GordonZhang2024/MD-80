<PropertyList>
	
	<path>efis.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>IntegrityAdf1</object-name>
		<object-name>IntegrityAdf2</object-name>
		<object-name>IntegrityMode</object-name>
		<object-name>IntegrityRange</object-name>
		<object-name>Text</object-name>
		<emission>
			<red>1.0</red>
			<green>0.6</green>
			<blue>0.3</blue>
			<factor-prop>controls/lighting/capt-panel-norm</factor-prop>
		</emission>
	</animation>
	
	<!-- Knobs -->
	<animation>
		<type>knob</type>
		<object-name>KnobMode</object-name>
		<property>controls/cockpit/efis-mode-1</property>
		<factor>45</factor>
		<offset-deg>-22.5</offset-deg>
		<center>
			<x-m>0</x-m>
			<y-m>-0.03852</y-m>
			<z-m>0.00863</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<increase>
			<binding>
				<command>nasal</command>
				<script>instruments.EFIS.adjustMode(0, 1);</script>
			</binding>
		</increase>
		<decrease>
			<binding>
				<command>nasal</command>
				<script>instruments.EFIS.adjustMode(0, -1);</script>
			</binding>
		</decrease>
	</animation>
	
	<animation>
		<type>knob</type>
		<object-name>KnobAdf1</object-name>
		<property>controls/cockpit/efis-adf-1[0]</property>
		<interpolation>
			<entry><ind>-1</ind><dep> 45</dep></entry> <!-- ADF -->
			<entry><ind> 1</ind><dep>-45</dep></entry> <!-- OFF -->
		</interpolation>
		<center>
			<x-m>0</x-m>
			<y-m>-0.00131</y-m>
			<z-m>0.00766</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/efis[0]/inputs/lh-vor-adf</property>
				<factor>-2</factor>
				<min>-1</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>knob</type>
		<object-name>KnobAdf2</object-name>
		<property>controls/cockpit/efis-adf-2[0]</property>
		<interpolation>
			<entry><ind>-1</ind><dep> 45</dep></entry> <!-- ADF -->
			<entry><ind> 1</ind><dep>-45</dep></entry> <!-- OFF -->
		</interpolation>
		<center>
			<x-m>0</x-m>
			<y-m>-0.00131</y-m>
			<z-m>0.00766</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/efis[0]/inputs/rh-vor-adf</property>
				<factor>-2</factor>
				<min>-1</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>knob</type>
		<object-name>KnobRange</object-name>
		<property>controls/cockpit/efis-range-1</property>
		<factor>36</factor>
		<offset-deg>-90</offset-deg>
		<center>
			<x-m>0</x-m>
			<y-m>0.03589</y-m>
			<z-m>0.00863</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<increase>
			<binding>
				<command>nasal</command>
				<script>instruments.EFIS.setRange(0, 1);</script>
			</binding>
		</increase>
		<decrease>
			<binding>
				<command>nasal</command>
				<script>instruments.EFIS.setRange(0, -1);</script>
			</binding>
		</decrease>
	</animation>
	
	<!-- Buttons -->
	<animation>
		<type>pick</type>
		<object-name>BtnNaid</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<condition>
					<greater-than-equals>
						<property>systems/electrical/outputs/efis</property>
						<value>24</value>
					</greater-than-equals>
				</condition>
				<command>property-toggle</command>
				<property>instrumentation/efis[0]/inputs/sta</property>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/efis[0]/naid-btn</property>
				<value>1</value>
			</binding>
			<binding>
				<command>nasal</command>
				<script>libraries.Sound.btn1();</script>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>instrumentation/efis[0]/naid-btn</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>BtnNaid</object-name>
		<object-name>TextNaid</object-name>
		<property>instrumentation/efis[0]/naid-btn</property>
		<factor>-0.002</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>BtnArpt</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<condition>
					<greater-than-equals>
						<property>systems/electrical/outputs/efis</property>
						<value>24</value>
					</greater-than-equals>
				</condition>
				<command>property-toggle</command>
				<property>instrumentation/efis[0]/inputs/arpt</property>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/efis[0]/arpt-btn</property>
				<value>1</value>
			</binding>
			<binding>
				<command>nasal</command>
				<script>libraries.Sound.btn1();</script>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>instrumentation/efis[0]/arpt-btn</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>BtnArpt</object-name>
		<object-name>TextArpt</object-name>
		<property>instrumentation/efis[0]/arpt-btn</property>
		<factor>-0.002</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>BtnData</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<condition>
					<greater-than-equals>
						<property>systems/electrical/outputs/efis</property>
						<value>24</value>
					</greater-than-equals>
				</condition>
				<command>property-toggle</command>
				<property>instrumentation/efis[0]/inputs/data</property>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/efis[0]/data-btn</property>
				<value>1</value>
			</binding>
			<binding>
				<command>nasal</command>
				<script>libraries.Sound.btn1();</script>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>instrumentation/efis[0]/data-btn</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>BtnData</object-name>
		<object-name>TextData</object-name>
		<property>instrumentation/efis[0]/data-btn</property>
		<factor>-0.002</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>BtnWpt</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<condition>
					<greater-than-equals>
						<property>systems/electrical/outputs/efis</property>
						<value>24</value>
					</greater-than-equals>
				</condition>
				<command>property-toggle</command>
				<property>instrumentation/efis[0]/inputs/wpt</property>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/efis[0]/wpt-btn</property>
				<value>1</value>
			</binding>
			<binding>
				<command>nasal</command>
