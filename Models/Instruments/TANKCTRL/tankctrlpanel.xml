<PropertyList>
	
	<path>firetankctrl.ac</path>

	<!-- tank volume display -->
	<animation>
		<type>material</type>
		<object-name>tank-volume-glass</object-name>
		<condition>
			<property>sim/model/firetank/droppower</property>
		</condition>
		<emission>
			<factor-prop>sim/model/firetank/bright</factor-prop>
			<red>   1 </red>
			<green> 1 </green>
			<blue>  1 </blue>
		</emission>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>salvodropcover</object-name>
		<property>controls/firetank/salvodrop/cover</property>
		<factor>55</factor>
		<center>
			<x-m>0.003172</x-m>
			<y-m>0.060276</y-m>
			<z-m>0.014555</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>salvodropcover</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>controls/firetank/salvodrop/cover</property>
			</binding>
			<binding>
				<command>nasal</command>
				<script>libraries.Sound.btn1();</script>
			</binding>
		</action>
	</animation>

