<?xml version="1.0"?>

<PropertyList>
	
	<path>firetankctrl.ac</path>
	
	<animation>
		<type>knob</type>
		<object-name>salvodropcover</object-name>
		<property>controls/cockpit/filetanker/salvodrop-cover</property>
		<drag-direction>vertical</drag-direction>
		<drag-scale-px>15</drag-scale-px>
		<factor>60</factor>
		<center>
			<x-m>0.003172</x-m>
			<y-m>0.060276</y-m>
			<z-m>0.014555</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
		<increase>
			<binding>
				<command>property-assign</command>
				<property>controls/firetank/salvodrop/cover</property>
				<value>1</value>
			</binding>
		</increase>
		<decrease>
			<binding>
				<condition>
					<property>controls/firetank/salvodrop/switch</property>
				</condition>
				<command>nasal</command>
				<script>libraries.Sound.switch1();</script>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>controls/firetank/salvodrop/switch</property>
				<value>0</value>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>controls/firetank/salvodrop/cover</property>
				<value>0</value>
			</binding>
		</decrease>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>salvodropswitch</object-name>
		<property>controls/cockpit/filetanker/salvodrop</property>
		<factor>45</factor>
		<center>
			<x-m>0.002423</x-m>
			<y-m>0.060212</y-m>
			<z-m>-0.013575</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>salvodropswitch</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<condition>
					<property>controls/firetank/salvodrop/cover</property>
				</condition>
				<command>property-toggle</command>
				<property>controls/firetank/salvodrop/switch</property>
			</binding>
			<binding>
				<command>nasal</command>
				<script>libraries.Sound.switch1();</script>
			</binding>
		</action>
	</animation>
	
	<animation>
