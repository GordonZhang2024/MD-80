<PropertyList>
	
	<path>fuel.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>center-lbs</object-name>
		<object-name>gross-weight-lbs</object-name>
		<object-name>left-lbs</object-name>
		<object-name>right-lbs</object-name>
		<object-name>total-lbs</object-name>
		<diffuse>
			<red>1</red>
			<green>0.45</green>
			<blue>0</blue>
			<factor-prop>controls/lighting/pedestal-digital-norm</factor-prop>
		</diffuse>
		<ambient>
			<red>0</red>
			<green>0</green>
			<blue>0</blue>
		</ambient>
		<specular>
			<red>0</red>
			<green>0</green>
			<blue>0</blue>
		</specular>
		<emission>
			<red>1</red>
			<green>0.45</green>
			<blue>0</blue>
			<factor-prop>controls/lighting/pedestal-digital-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>center-lbs</object-name>
		<object-name>gross-weight-lbs</object-name>
		<object-name>left-lbs</object-name>
		<object-name>right-lbs</object-name>
		<object-name>total-lbs</object-name>
		<condition>
			<and>
				<greater-than-equals>
					<property>systems/electrical/bus/ac-l</property>
					<value>24</value>
				</greater-than-equals>
				<greater-than>
					<property>controls/lighting/pedestal-digital-norm</property>
					<value>0.01</value>
				</greater-than>
			</and>
		</condition>
	</animation>
	
	<text>
		<name>left-lbs</name>
		<offsets>
			<x-m>0.003</x-m>
			<y-m>-0.0048</y-m>
			<z-m>0.0261</z-m>
		</offsets>
		<alignment>right-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type type="string">number-value</type>
		<format type="string">%02.0f</format>
		<property>systems/fuel/tank-l-lbs</property>
		<truncate>false</truncate>
		<font type="string">Std7SegCustom.ttf</font>
		<draw-text>true</draw-text>
		<draw-alignment>false</draw-alignment>
		<draw-boundingbox>false</draw-boundingbox>
		<character-size>0.0085</character-size>
		<font-resolution>
			<width type="int">32</width>
			<height type="int">32</height>
		</font-resolution>
	</text>
	
	<text>
		<name>right-lbs</name>
		<offsets>
			<x-m>0.003</x-m>
			<y-m>0.0393</y-m>
			<z-m>0.0261</z-m>
		</offsets>
		<alignment>right-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type type="string">number-value</type>
		<format type="string">%02.0f</format>
		<property>systems/fuel/tank-r-lbs</property>
		<truncate>false</truncate>
		<font type="string">Std7SegCustom.ttf</font>
		<draw-text>true</draw-text>
		<draw-alignment>false</draw-alignment>
		<draw-boundingbox>false</draw-boundingbox>
		<character-size>0.0085</character-size>
		<font-resolution>
			<width type="int">32</width>
			<height type="int">32</height>
		</font-resolution>
	</text>
	
	<text>
		<name>center-lbs</name>
		<offsets>
			<x-m>0.003</x-m>
			<y-m>0.0173</y-m>
			<z-m>0.0071</z-m>
		</offsets>
		<alignment>right-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type type="string">number-value</type>
		<format type="string">%02.0f</format>
		<property>systems/fuel/tank-c-lbs</property>
		<truncate>false</truncate>
		<font type="string">Std7SegCustom.ttf</font>
		<draw-text>true</draw-text>
		<draw-alignment>false</draw-alignment>
		<draw-boundingbox>false</draw-boundingbox>
		<character-size>0.0085</character-size>
		<font-resolution>
			<width type="int">32</width>
			<height type="int">32</height>
		</font-resolution>
	</text>
	
	<text>
		<name>total-lbs</name>
