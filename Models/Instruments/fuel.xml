<PropertyList>
	
	<path>fuel.ac</path>
	
	<animation>
		<type>rotate</type>
		<object-name>TestKnob</object-name>
		<property>controls/cockpit/fuel-channel-select</property>
		<interpolation>
			<entry><ind>0</ind><dep>5</dep></entry>
			<entry><ind>1</ind><dep>-30</dep></entry>
		</interpolation>
		<center>
			<x-m>0</x-m>
			<y-m>-0.03657</y-m>
			<z-m>-0.03601</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>translate</type>
		<object-name>TestKnob</object-name>
		<property>controls/fuel/channel-test</property>
		<factor>-0.005</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>TestKnob</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>controls/fuel/channel-test</property>
				<value>1</value>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>controls/fuel/channel-test</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
		<action>
			<button>3</button>
			<button>4</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>controls/fuel/channel-select</property>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>center-lbs</object-name>
		<object-name>gross-weight-lbs</object-name>
		<object-name>left-lbs</object-name>
		<object-name>right-lbs</object-name>
		<object-name>total-lbs</object-name>
		<diffuse>
			<red>1</red>
			<green>0.6</green>
			<blue>0</blue>
			<factor-prop>systems/lighting/pedestal-digital</factor-prop>
		</diffuse>
		<ambient>
			<red>0</red>
			<green>0</green>
			<blue>0</blue>
		</ambient>
		<specular>
			<red>0</red>
			<green>0</green>
			<blue>0</blue>
		</specular>
		<emission>
			<red>1</red>
			<green>0.6</green>
			<blue>0</blue>
			<factor-prop>systems/lighting/pedestal-digital</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>center-lbs</object-name>
		<object-name>gross-weight-lbs</object-name>
		<object-name>left-lbs</object-name>
		<object-name>right-lbs</object-name>
		<object-name>total-lbs</object-name>
		<condition>
			<and>
				<greater-than-equals>
					<property>systems/electrical/bus/ac-l</property>
					<value>24</value>
				</greater-than-equals>
				<greater-than>
					<property>systems/lighting/pedestal-digital</property>
					<value>0.01</value>
				</greater-than>
			</and>
		</condition>
	</animation>
	
	<text>
		<name>left-lbs</name>
		<offsets>
			<x-m>0.003</x-m>
			<y-m>-0.0062</y-m>
			<z-m>0.0261</z-m>
		</offsets>
		<alignment>right-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type>number-value</type>
		<format>%02.0f</format>
		<property>systems/fuel/tank-l-lbs</property>
		<truncate>false</truncate>
		<font>Std7SegCustom.ttf</font>
		<draw-text>true</draw-text>
		<draw-alignment>false</draw-alignment>
		<draw-boundingbox>false</draw-boundingbox>
		<character-size>0.0085</character-size>
		<font-resolution>
			<width>30</width>
			<height>32</height>
		</font-resolution>
	</text>
	
