<PropertyList>

	<path>res/fma1.ac</path>
	
    <effect>
        <inherits-from>Effects/model-transparent</inherits-from>
    </effect>
	
	<animation>
		<type>select</type>
		<object-name>AP</object-name>
		<object-name>AP1</object-name>
		<object-name>AP2</object-name>
		<object-name>APTrim</object-name>
		<object-name>FD</object-name>
		<object-name>Heading</object-name>
		<object-name>Horizon</object-name>
		<object-name>ILS</object-name>
		<object-name>Monitor</object-name>
		<object-name>NoAutoland</object-name>
		<object-name>Throttle</object-name>
		<condition>
			<greater-than-equals>
				<property>systems/electrical/outputs/fma[0]</property>
				<value>24</value>
			</greater-than-equals>
		</condition>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>fma1.screen</object-name>
		<emission>
			<red>1.0</red>
			<green>1.0</green>
			<blue>1.0</blue>
			<factor-prop>controls/lighting/capt-digital-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>fma1.screen</object-name>
		<condition>
			<greater-than>
				<property>controls/lighting/capt-digital-norm</property>
				<value>0.01</value>
			</greater-than>
		</condition>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>rstBtn</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-assign</command>
				<property>controls/cockpit/rst-btn-1</property>
				<value>1</value>
			</binding>
			<mod-up>
				<binding>
					<command>property-assign</command>
					<property>controls/cockpit/rst-btn-1</property>
					<value>0</value>
				</binding>
			</mod-up>
		</action>
	</animation>
	
	<animation>
		<type>translate</type>
		<object-name>rstBtn</object-name>
		<property>controls/cockpit/rst-btn-1</property>
		<factor>-0.001</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>AP1</object-name>
		<condition>
			<or>
				<equals>
					<property>it-autoflight/output/ap1</property>
					<value>1</value>
				</equals>
				<property>controls/switches/annun-test-5sec</property>
			</or>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>AP2</object-name>
		<condition>
			<or>
				<equals>
					<property>it-autoflight/output/ap2</property>
					<value>1</value>
				</equals>
				<property>controls/switches/annun-test-5sec</property>
			</or>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>FD</object-name>
		<condition>
			<or>
				<equals>
					<property>it-autoflight/output/fd1</property>
					<value>1</value>
				</equals>
				<property>controls/switches/annun-test-5sec</property>
			</or>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>AP</object-name>
		<condition>
			<or>
				<property>/it-autoflight/warning/ap</property>
				<property>controls/switches/annun-test</property>
			</or>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Throttle</object-name>
		<condition>
			<or>
				<property>/it-autoflight/warning/ats</property>
				<property>controls/switches/annun-test</property>
			</or>
		</condition>
	</animation>
	
	<!-- These are not simulated yet, so they only illuminate when the test is on. Remove each light/button once you add its select animation. -JD -->
	<animation>
		<type>select</type>
		<object-name>APTrim</object-name>
		<object-name>Heading</object-name>
		<object-name>Horizon</object-name>
		<object-name>ILS</object-name>
		<object-name>Monitor</object-name>
		<object-name>NoAutoland</object-name>
		<condition>
			<property>controls/switches/annun-test-5sec</property>
		</condition>
	</animation>

</PropertyList>