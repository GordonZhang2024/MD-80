<PropertyList>
	
	<path>efis_dimmer.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>Integrity</object-name>
		<object-name>KnobND_Legend</object-name>
		<object-name>KnobPFD_Legend</object-name>
		<object-name>KnobWX_Legend</object-name>
		<emission>
			<red>1.0</red>
			<green>0.6</green>
			<blue>0.3</blue>
			<factor-prop>controls/lighting/fo-panel-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>knob</type>
		<object-name>KnobDH</object-name>
		<property>controls/cockpit/mins-r-rotate</property>
		<factor>11.25</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0.009</y-m>
			<z-m>0.026</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<condition>
					<property>systems/electrical/outputs/efis</property>
				</condition>
				<command>property-adjust</command>
				<property>controls/switches/minimums</property>
				<factor>1</factor>
				<min>10</min>
				<max>999</max>
				<wrap>false</wrap>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>controls/cockpit/mins-r-rotate</property>
				<factor>1</factor>
				<min>0</min>
				<max>100000</max>
				<wrap>true</wrap>
			</binding>
		</action>
	</animation>
	
	<!-- Right now, only 0 and 1 are supported due to the display shaders -->
    <animation>
		<type>knob</type>
		<object-name>KnobPFD</object-name>
		<property>controls/cockpit/pfd2-dimmer</property>
		<factor>270</factor>
		<center>
			<x-m>0.008</x-m>
			<y-m>0</y-m>
			<z-m>0.005</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/du/pfd2-dimmer</property>
				<factor>1</factor>
				<min>0</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	
    <animation>
		<type>knob</type>
		<object-name>KnobND</object-name>
		<property>controls/cockpit/nd2-dimmer</property>
		<factor>270</factor>
		<center>
			<x-m>0.002</x-m>
			<y-m>0</y-m>
			<z-m>-0.020</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/du/nd2-dimmer</property>
				<factor>1</factor>
				<min>0</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>

</PropertyList>
