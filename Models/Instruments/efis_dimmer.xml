<PropertyList>
	
	<path>efis_dimmer.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>Integrity</object-name>
		<emission>
			<red>1.0</red>
			<green>0.6</green>
			<blue>0.3</blue>
			<factor-prop>controls/lighting/main-panel-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>KnobDH</object-name>
		<property>instrumentation/efis/mins-rotate</property>
		<factor>11.25</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0.009</y-m>
			<z-m>0.026</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>KnobDH</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable>false</repeatable>
			<binding>
				<condition>
					<and>
						<property>systems/electrical/outputs/efis</property>
						<not><property>devices/status/keyboard/shift</property></not>
					</and>
				</condition>
				<command>property-adjust</command>
				<property>controls/switches/minimums</property>
				<step>1</step>
				<max>999</max>
			</binding>
			<binding>
				<condition>
					<and>
						<property>systems/electrical/outputs/efis</property>
						<property>devices/status/keyboard/shift</property>
					</and>
				</condition>
				<command>property-adjust</command>
				<property>controls/switches/minimums</property>
				<step>10</step>
				<max>999</max>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/efis/mins-rotate</property>
				<step>1</step>
				<min>0</min>
				<max>100000</max>
				<wrap>true</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable>true</repeatable>
			<binding>
				<condition>
					<and>
						<property>systems/electrical/outputs/efis</property>
						<not><property>devices/status/keyboard/shift</property></not>
					</and>
				</condition>
				<command>property-adjust</command>
				<property>controls/switches/minimums</property>
				<step>-1</step>
				<min>0</min>
			</binding>
			<binding>
				<condition>
					<and>
						<property>systems/electrical/outputs/efis</property>
						<property>devices/status/keyboard/shift</property>
					</and>
				</condition>
				<command>property-adjust</command>
				<property>controls/switches/minimums</property>
				<step>-10</step>
				<min>0</min>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/efis/mins-rotate</property>
				<step>-1</step>
				<min>0</min>
				<max>100000</max>
				<wrap>true</wrap>
			</binding>
		</action>
	</animation>

