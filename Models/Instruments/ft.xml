<PropertyList>
	
	<path>ft.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>Face</object-name>
		<object-name>NeedleL</object-name>
		<object-name>NeedleR</object-name>
		<emission>
			<red>1.0</red>
			<green>0.6</green>
			<blue>0.3</blue>
			<factor-prop>systems/lighting/center-panel</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>NeedleL</object-name>
		<property>environment/temperature-degc</property> <!-- Will be changed when I add the fuel system, and anti-ice system -->
		<interpolation>
			<entry><ind>-60</ind><dep> 57.5</dep></entry>
			<entry><ind>  0</ind><dep>  5.0</dep></entry>
			<entry><ind> 40</ind><dep>-30.0</dep></entry>
			<entry><ind> 80</ind><dep>-60.0</dep></entry>
		</interpolation>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>-0.016</y-m>
			<z-m>0</z-m>
		</center>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>NeedleR</object-name>
		<property>environment/temperature-degc</property> <!-- Will be changed when I add the fuel system, and anti-ice system -->
		<interpolation>
			<entry><ind>-60</ind><dep>-57.5</dep></entry>
			<entry><ind>  0</ind><dep> -5.0</dep></entry>
			<entry><ind> 40</ind><dep> 30.0</dep></entry>
			<entry><ind> 80</ind><dep> 60.0</dep></entry>
		</interpolation>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0.016</y-m>
			<z-m>0</z-m>
		</center>
	</animation>

</PropertyList>
