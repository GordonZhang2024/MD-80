<PropertyList>
	
	<path>landing_gear_ind.ac</path>

	<!-- Doors -->
	<animation>
		<type>select</type>
		<object-name>FaceDoorOff</object-name>
		<condition>
			<or>
				<less-than>
					<property>systems/electrical/bus/dc-bat</property>
					<value>24</value>
				</less-than>
				<and>
					<equals>
						<property>fdm/jsbsim/gear/unit[1]/status</property>
						<value>0</value>
					</equals>
					<equals>
						<property>fdm/jsbsim/gear/unit[2]/status</property>
						<value>0</value>
					</equals>
				</and>
			</or>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>FaceDoorOn</object-name>
		<condition>
			<and>
				<greater-than-equals>
					<property>systems/electrical/bus/dc-bat</property>
					<value>24</value>
				</greater-than-equals>
				<or>
					<not-equals>
						<property>fdm/jsbsim/gear/unit[1]/status</property>
						<value>0</value>
					</not-equals>
					<not-equals>
						<property>fdm/jsbsim/gear/unit[2]/status</property>
						<value>0</value>
					</not-equals>
				</or>
			</and>
		</condition>
	</animation>
	
	<!-- Nose -->
