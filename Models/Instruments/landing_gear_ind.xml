				<less-than>
					<property>systems/electrical/bus/dc-bat</property>
					<value>24</value>
				</less-than>
				<equals>
					<property>fdm/jsbsim/gear/unit[0]/status</property>
					<value>0</value>
				</equals>
			</or>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>FaceNoseRed</object-name>
		<condition>
			<and>
				<greater-than-equals>
					<property>systems/electrical/bus/dc-bat</property>
					<value>24</value>
				</greater-than-equals>
				<equals>
					<property>fdm/jsbsim/gear/unit[0]/status</property>
					<value>1</value>
				</equals>
			</and>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>FaceNoseGreen</object-name>
		<condition>
			<and>
				<greater-than-equals>
					<property>systems/electrical/bus/dc-bat</property>
					<value>24</value>
				</greater-than-equals>
				<equals>
					<property>fdm/jsbsim/gear/unit[0]/status</property>
					<value>2</value>
				</equals>
			</and>
		</condition>
	</animation>
	
