<PropertyList>
	
	<path>agl.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>LightingGroup</object-name>
		<emission>
			<red>0.6</red>
			<green>0.45</green>
			<blue>0.3</blue>
			<factor-prop>controls/lighting/capt-panel-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>DHLight</object-name>
		<emission>
			<red>1.0</red>
			<green>0.776</green>
			<blue>0.273</blue>
			<factor-prop>instrumentation/agl[0]/minimums-light</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>Tape</object-name>
		<property>instrumentation/agl[0]/altitude-ft</property>
		<interpolation>
			<entry><ind>   0</ind><dep>0.0000</dep></entry>
			<entry><ind>2700</ind><dep>0.8831</dep></entry>
		</interpolation>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>TapeDH</object-name>
		<property>instrumentation/agl[0]/minimums</property>
		<interpolation>
			<entry><ind>-150</ind><dep>-0.3675</dep></entry>
			<entry><ind>   0</ind><dep> 0.0000</dep></entry>
			<entry><ind> 150</ind><dep> 0.3675</dep></entry>
		</interpolation>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Flag</object-name>
		<condition>
			<or>
				<not-equals>
					<property>instrumentation/agl[0]/power-avail</property>
					<value>1</value>
				</not-equals>
				<greater-than>
					<property>instrumentation/agl[0]/altitude-ft</property>
					<value>3000</value>
				</greater-than>
			</or>
		</condition>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>DH100</object-name>
		<property>instrumentation/agl[0]/minimums-text</property>
		<factor>0.001</factor>
		<step>100</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>DH10</object-name>
		<property>instrumentation/agl[0]/minimums-text</property>
		<factor>0.01</factor>
		<step>10</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>DH1</object-name>
		<property>instrumentation/agl[0]/minimums-text</property>
		<factor>0.1</factor>
		<step>1</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
		
	<animation>
		<type>knob</type>
		<object-name>Knob</object-name>
		<property>instrumentation/efis/mins-l-rotate</property>
		<factor>11.25</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0.0149</y-m>
			<z-m>-0.04239</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>controls/switches/minimums</property>
				<factor>1</factor>
				<min>10</min>
				<max>999</max>
				<wrap>false</wrap>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/efis/mins-l-rotate</property>
				<factor>1</factor>
				<min>0</min>
				<max>100000</max>
				<wrap>true</wrap>
			</binding>
		</action>
	</animation>

</PropertyList>
