<PropertyList>
	
	<path>fuel-aux.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>aft-lbs</object-name>
		<object-name>fwd-lbs</object-name>
		<diffuse>
			<red>1</red>
			<green>0.6</green>
			<blue>0</blue>
			<factor-prop>controls/lighting/capt-digital-norm</factor-prop>
		</diffuse>
		<ambient>
			<red>0</red>
			<green>0</green>
			<blue>0</blue>
		</ambient>
		<specular>
			<red>0</red>
			<green>0</green>
			<blue>0</blue>
		</specular>
		<emission>
			<red>1</red>
			<green>0.6</green>
			<blue>0</blue>
			<factor-prop>controls/lighting/capt-digital-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>aft-lbs</object-name>
		<object-name>fwd-lbs</object-name>
		<condition>
			<and>
				<greater-than-equals>
					<property>systems/electrical/bus/ac-l</property>
					<value>24</value>
				</greater-than-equals>
				<greater-than>
					<property>controls/lighting/capt-digital-norm</property>
					<value>0.01</value>
				</greater-than>
			</and>
		</condition>
	</animation>
	
	<text>
		<name>fwd-lbs</name>
		<offsets>
			<x-m>0.003</x-m>
			<y-m>0.0173</y-m>
			<z-m>0.0145</z-m>
		</offsets>
		<alignment>right-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type type="string">number-value</type>
		<format type="string">%02.0f</format>
		<format type="string">%05d</format>
		<property>systems/fuel/tank-aux-fwd-lbs</property>
		<truncate>false</truncate>
		<font type="string">Std7SegCustom.ttf</font>
		<draw-text>true</draw-text>
		<draw-alignment>false</draw-alignment>
		<draw-boundingbox>false</draw-boundingbox>
		<character-size>0.0085</character-size>
		<font-resolution>
			<width type="int">32</width>
			<height type="int">32</height>
		</font-resolution>
	</text>
	
	<text>
		<name>aft-lbs</name>
		<offsets>
			<x-m>0.003</x-m>
			<y-m>0.0173</y-m>
			<z-m>-0.0071</z-m>
		</offsets>
		<alignment>right-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type type="string">number-value</type>
		<format type="string">%02.0f</format>
		<property>systems/fuel/tank-aux-aft-lbs</property>
		<truncate>false</truncate>
		<font type="string">Std7SegCustom.ttf</font>
		<draw-text>true</draw-text>
		<draw-alignment>false</draw-alignment>
		<draw-boundingbox>false</draw-boundingbox>
		<character-size>0.0085</character-size>
		<font-resolution>
			<width type="int">32</width>
			<height type="int">32</height>
		</font-resolution>
	</text>

</PropertyList>
