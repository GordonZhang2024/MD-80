<PropertyList>

	<name>acconfig-du-framerate</name>
	<layout>vbox</layout>
	
	<group>
		<layout>hbox</layout>
		
		<text>
			<halign>left</halign>
			<label>DU Framerate</label>
		</text>
		
		<button>
			<halign>right</halign>
			<pref-width>20</pref-width>
			<pref-height>20</pref-height>
			<legend>X</legend>
			<key>Esc</key>
			<binding>
				<command>nasal</command>
				<script>
					acconfig.OPTIONS.write();
					canvas_pfd.rateApply();
					#canvas_nd.rateApply();
				</script>
			</binding>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
		
	<hrule/>
	
	<group>
		<layout>vbox</layout>
		
		<text>
			<halign>left</halign>
			<label>Here you can adjust the framerate of the Display Units.</label>
		</text>
		
		<group>
			<layout>table</layout>
			
			<text>
				<row>0</row>
				<col>0</col>
				<halign>left</halign>
				<label>Both PFDs:</label>
			</text>
			
			<slider>
				<row>0</row>
				<col>1</col>
				<pref-width>250</pref-width>
				<property>/systems/acconfig/options/du/pfd-fps</property>
				<min>5</min>
				<max>30</max>
				<step>5</step>
				<live>true</live>
				<binding>
					<command>dialog-apply</command>
				</binding>
			</slider>
			
			<text>
				<row>0</row>
				<col>2</col>
				<halign>left</halign>
				<border>1</border>
				<label>999</label>
				<property>/systems/acconfig/options/du/pfd-fps</property>
				<live>1</live>
			</text>
			
