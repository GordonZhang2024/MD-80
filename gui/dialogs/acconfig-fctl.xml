<PropertyList>

	<name>acconfig-fctl</name>
	<layout>vbox</layout>

    <group>
        <layout>hbox</layout>
		
        <text>
            <halign>left</halign>
            <label>Flight Control Monitor</label>
        </text>
		
        <button>
            <halign>right</halign>
            <pref-width>20</pref-width>
            <pref-height>20</pref-height>
            <legend>X</legend>
            <key>Esc</key>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
	
    <hrule/>
	
	<group>
		<layout>hbox</layout>
		<text>
			<label>Surface Up = Slider Up</label>
		</text>
	</group>
	
	<group>
		<layout>vbox</layout>
		
		<group>
			<layout>hbox</layout>
			
			<hrule>
				<stretch>true</stretch>
			</hrule>
			<text>
				<label>Ailerons</label>
			</text>
			<hrule>
				<stretch>true</stretch>
			</hrule>
		</group>
		
		<group>
			<layout>hbox</layout>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>L:</label>
				</text>
				<slider>
					<pref-height>125</pref-height>
					<vertical>true</vertical>
					<property>/systems/fcs/aileron-l/surface-final-deg</property>
					<min>20</min>
					<max>-20</max>
					<step>0.002</step>
					<live>true</live>
				</slider>
			</group>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>R:</label>
				</text>
				<slider>
					<pref-height>125</pref-height>
					<vertical>true</vertical>
					<property>/systems/fcs/aileron-r/surface-final-deg</property>
					<min>20</min>
					<max>-20</max>
					<step>0.002</step>
					<live>true</live>
				</slider>
			</group>
		</group>
		
		<group>
			<layout>hbox</layout>
			
			<hrule>
				<stretch>true</stretch>
			</hrule>
			<text>
				<label>Spoilers</label>
			</text>
			<hrule>
				<stretch>true</stretch>
			</hrule>
		</group>
		
		<group>
			<layout>hbox</layout>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>L:</label>
				</text>
				<slider>
					<pref-height>100</pref-height>
					<vertical>true</vertical>
					<property>/systems/fcs/spoiler-left-deg</property>
					<min>0</min>
					<max>60</max>
					<step>0.006</step>
					<live>true</live>
				</slider>
			</group>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>R:</label>
				</text>
				<slider>
					<pref-height>100</pref-height>
					<vertical>true</vertical>
					<property>/systems/fcs/spoiler-right-deg</property>
					<min>0</min>
					<max>60</max>
					<step>0.006</step>
					<live>true</live>
				</slider>
			</group>
		</group>
		
		<group>
			<layout>hbox</layout>
			
			<hrule>
				<stretch>true</stretch>
			</hrule>
			<text>
				<label>Elevators</label>
			</text>
			<hrule>
				<stretch>true</stretch>
			</hrule>
		</group>
		
		<group>
			<layout>hbox</layout>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>L:</label>
				</text>
				<slider>
					<pref-height>125</pref-height>
					<vertical>true</vertical>
					<property>/systems/fcs/elevator-l/surface-final-deg</property>
					<min>20</min>
					<max>-22</max>
					<step>0.0022</step>
					<live>true</live>
				</slider>
			</group>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>Stab:</label>
				</text>
				<slider>
					<pref-height>125</pref-height>
					<vertical>true</vertical>
					<property>/systems/fcs/stabilizer/final-deg</property>
					<min>2.5</min>
					<max>-12.5</max>
					<step>0.0012</step>
					<live>true</live>
				</slider>
			</group>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>R:</label>
				</text>
				<slider>
					<pref-height>125</pref-height>
					<vertical>true</vertical>
					<property>/systems/fcs/elevator-r/surface-final-deg</property>
					<min>20</min>
					<max>-22</max>
					<step>0.0022</step>
					<live>true</live>
				</slider>
			</group>
		</group>
		
		<group>
			<layout>hbox</layout>
			
			<hrule>
				<stretch>true</stretch>
			</hrule>
			<text>
				<label>Rudder</label>
			</text>
			<hrule>
				<stretch>true</stretch>
			</hrule>
		</group>
		
		<group>
			<layout>hbox</layout>
			
			<group>
				<layout>vbox</layout>
				
				<slider>
					<pref-width>150</pref-width>
					<property>/systems/fcs/rudder/surface-final-deg</property>
					<min>-22</min>
					<max>22</max>
					<step>0.0022</step>
					<live>true</live>
				</slider>
			</group>
		</group>
	</group>
	
</PropertyList>
