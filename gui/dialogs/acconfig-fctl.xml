<PropertyList>

	<name>acconfig-fctl</name>
	<layout>vbox</layout>

    <group>
        <layout>hbox</layout>
		
        <text>
            <halign>left</halign>
            <label>Flight Controls</label>
        </text>
		
        <button>
            <halign>right</halign>
            <pref-width>20</pref-width>
            <pref-height>20</pref-height>
            <legend>X</legend>
            <key>Esc</key>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
	
    <hrule/>
	
	<group>
		<layout>hbox</layout>
		<text>
			<label>MD-80 Flight Controls</label>
		</text>
	</group>
	
	<group>
		<layout>vbox</layout>
		
		<group>
			<layout>hbox</layout>

			<hrule>
				<stretch type="bool">true</stretch>
			</hrule>
			<text>
				<label>Roll</label>
			</text>
			<hrule>
				<stretch type="bool">true</stretch>
			</hrule>
		</group>
		
		<group>
			<layout>hbox</layout>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>L:</label>
				</text>
				<slider>
					<pref-height>150</pref-height>
					<vertical>true</vertical>
					<property>/fdm/jsbsim/fcs-actual/aileron-l/surface-final-deg</property>
					<min>-20</min>
					<max>20</max>
					<step>0.002</step>
					<live>true</live>
				</slider>
			</group>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>R:</label>
				</text>
				<slider>
					<pref-height>150</pref-height>
					<vertical>true</vertical>
					<property>/fdm/jsbsim/fcs-actual/aileron-r/surface-final-deg</property>
					<min>-20</min>
					<max>20</max>
					<step>0.002</step>
					<live>true</live>
				</slider>
			</group>
		</group>
		
		<group>
			<layout>hbox</layout>

			<hrule>
				<stretch type="bool">true</stretch>
			</hrule>
			<text>
				<label>Pitch</label>
			</text>
			<hrule>
				<stretch type="bool">true</stretch>
			</hrule>
		</group>
		
		<group>
			<layout>hbox</layout>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>L:</label>
				</text>
				<slider>
					<pref-height>150</pref-height>
					<vertical>true</vertical>
					<property>/fdm/jsbsim/fcs-actual/elevator-l/surface-final-deg</property>
					<min>-22.5</min>
					<max>19.5</max>
					<step>0.0022</step>
					<live>true</live>
				</slider>
			</group>
			
			<group>
				<layout>vbox</layout>
		
				<text>
					<label>Trim:</label>
				</text>
				<slider>
					<pref-height>150</pref-height>
					<vertical>true</vertical>
					<property>/fdm/jsbsim/fcs-actual/stabilizer/final-deg</property>
					<min>-12.5</min>
					<max>2.5</max>
					<step>0.0012</step>
					<live>true</live>
				</slider>
			</group>
			
			<group>
				<layout>vbox</layout>
				
				<text>
					<label>R1:</label>
				</text>
				<slider>
					<pref-height>150</pref-height>
					<vertical>true</vertical>
					<property>/fdm/jsbsim/fcs-actual/elevator-r/surface-final-deg</property>
					<min>-22.5</min>
					<max>19.5</max>
					<step>0.0022</step>
					<live>true</live>
				</slider>
			</group>
		</group>
		
		<group>
			<layout>hbox</layout>

			<hrule>
				<stretch type="bool">true</stretch>
			</hrule>
			<text>
				<label>Rudder</label>
			</text>
			<hrule>
				<stretch type="bool">true</stretch>
			</hrule>
		</group>
		
		<group>
			<layout>hbox</layout>
			
			<group>
				<layout>vbox</layout>
				
				<slider>
					<pref-width>150</pref-width>
					<property>/fdm/jsbsim/fcs-actual/rudder/surface-final-deg</property>
					<min>-22</min>
					<max>22</max>
					<step>0.0022</step>
					<live>true</live>
				</slider>
			</group>
		</group>
	</group>
	
</PropertyList>
