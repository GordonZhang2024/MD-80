<?xml version="1.0"?>

<PropertyList>
	
	<name>firetank</name>
	<layout>vbox</layout>
	<width>210</width>
	
	<group>
		<layout>hbox</layout>
		
		<text>
			<label>Firetank System</label>
		</text>
		
		<empty><stretch>1</stretch></empty>
		
        <button>
            <halign>right</halign>
            <pref-width>20</pref-width>
            <pref-height>20</pref-height>
            <legend>X</legend>
            <key>Esc</key>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
	</group>
	
	<hrule/>
	
	<checkbox>
		<halign>left</halign>
		<label>Retardant Tank Equipped</label>
		<property>/sim/model/firetank/enabled</property>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</checkbox>
	
	<hrule/>
	
	<checkbox>
		<halign>left</halign>
		<label>Use Water Instead of Retardant</label>
		<property>/sim/model/firetank/foam</property>
		<binding>
			<command>dialog-apply</command>
		</binding>
		<live>true</live>
	</checkbox>
	
	<hrule/>
	
	<group>
		<layout>hbox</layout>
		<halign>center</halign>
		<text>
			<label>0-3=1/8 1-2-3-4 Sec</label>
		</text>
	</group>
	<group>
		<layout>hbox</layout>
		<halign>center</halign>
		<text>
			<label>4-8=1/4 1-2-3-4-6 Sec</label>
		</text>
	</group>
	<group>
		<layout>hbox</layout>
		<halign>center</halign>
		<text>
			<label>9-14=1/2 1-2-3-4-6-8 Sec</label>
		</text>
	</group>
	<group>
		<layout>hbox</layout>
		<halign>center</halign>
		<text>
			<label>15-21=Full 0.5-1-2-3-4-6-8 Sec</label>
		</text>
	</group>
	
	<group>
		<layout>hbox</layout>
		<halign>left</halign>
		
		<text>
			<pref-width>10</pref-width>
			<padding>20</padding>
			<property>/controls/firetank/distribution/dial</property>
			<live>true</live>
		</text>
		
		<slider>
			<label>Distribution</label>
			<halign>left</halign>
			<enable>
				<property>/sim/model/firetank/enabled</property>
			</enable>
			<property>/controls/firetank/distribution/dial</property>
			<min>0</min>
			<max>21</max>
			<step>1</step>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<live>true</live>
		</slider>
	</group>
	
	<hrule/>
	
	<group>
		<layout>hbox</layout>
		<halign>center</halign>
		
		<text>
			<label>Tank Fill Weight</label>
		</text>
	</group>
	
	<group>
		<layout>hbox</layout>
		<halign>left</halign>
		
		<text>
			<pref-width>30</pref-width>
			<padding>20</padding>
			<property>/fdm/jsbsim/inertia/pointmass-weight-lbs[4]</property>
			<format>%2.0f</format>
			<live>true</live>
		</text>
		<slider>
			<label>Load</label>
			<halign>left</halign>
			<enable>
				<property>/sim/model/firetank/enabled</property>
			</enable>
			<property>/fdm/jsbsim/inertia/pointmass-weight-lbs[4]</property>
			<min>0</min>
			<max>35480</max>
			<step>1</step>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<live>true</live>
		</slider>
	</group>

</PropertyList>
