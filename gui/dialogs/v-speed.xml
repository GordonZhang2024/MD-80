<?xml version="1.0"?>

<!-- MD-80 Temporary V Speed Applet -->
<!-- Copyright (c) 2022 Joshua Davidson (Octal450) -->

<PropertyList>
	
	<name>v-speed</name>
	<layout>vbox</layout>
	
	<nasal>
		<open>
			setprop("/fdm/jsbsim/speeds/v1-round", math.round(getprop("/fdm/jsbsim/speeds/v1")));
			setprop("/fdm/jsbsim/speeds/vr-round", math.round(getprop("/fdm/jsbsim/speeds/vr")));
			setprop("/fdm/jsbsim/speeds/v2-round", math.round(getprop("/fdm/jsbsim/speeds/v2")));
			
			var loop = maketimer(1, func() {
				setprop("/fdm/jsbsim/speeds/v1-round", math.round(getprop("/fdm/jsbsim/speeds/v1")));
				setprop("/fdm/jsbsim/speeds/vr-round", math.round(getprop("/fdm/jsbsim/speeds/vr")));
				setprop("/fdm/jsbsim/speeds/v2-round", math.round(getprop("/fdm/jsbsim/speeds/v2")));
			});
			loop.start();
		</open>
		<close>
			loop.stop();
		</close>
	</nasal>
	
	<group>
		<layout>hbox</layout>
		
		<text>
			<halign>left</halign>
			<label>V Speed Applet</label>
		</text>
		
		<button>
			<halign>right</halign>
			<pref-width>20</pref-width>
			<pref-height>20</pref-height>
			<legend>X</legend>
			<key>Esc</key>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>
	
	<hrule/>
	
	<group>
		<layout>table</layout>
		
		<text>
			<row>0</row>
			<col>0</col>
			<label>Takeoff Flap:</label>
		</text>
		
		<button>
			<row>0</row>
			<col>1</col>
			<pref-width>25</pref-width>
			<pref-height>25</pref-height>
			<legend>&lt;</legend>
			<binding>
				<command>property-adjust</command>
				<property>/fdm/jsbsim/speeds/flap-setting</property>
				<step>-1</step>
				<min>4</min>
				<max>15</max>
			</binding>
		</button>

		<input>
			<row>0</row>
			<col>2</col>
			<pref-width>50</pref-width>
			<property>/fdm/jsbsim/speeds/flap-setting</property>
			<live>true</live>
		</input>
		
		<button>
			<row>0</row>
			<col>3</col>
			<pref-width>25</pref-width>
			<pref-height>25</pref-height>
			<legend>&gt;</legend>
			<binding>
				<command>property-adjust</command>
				<property>/fdm/jsbsim/speeds/flap-setting</property>
				<step>1</step>
				<min>4</min>
				<max>15</max>
			</binding>
		</button>
	</group>
	
	<hrule/>
	
	<group>
		<layout>table</layout>
		
		<text>
			<row>0</row>
			<col>0</col>
			<label>V1: </label>
		</text>
		<text>
			<row>0</row>
			<col>1</col>
			<label>999</label>
			<live>true</live>
			<property>/fdm/jsbsim/speeds/v1-round</property>
		</text>
		
		<text>
			<row>1</row>
			<col>0</col>
			<label>VR: </label>
		</text>
		<text>
			<row>1</row>
			<col>1</col>
			<label>999</label>
			<live>true</live>
			<property>/fdm/jsbsim/speeds/vr-round</property>
		</text>
		
		<text>
			<row>2</row>
			<col>0</col>
			<label>V2: </label>
		</text>
		<text>
			<row>2</row>
			<col>1</col>
			<label>999</label>
			<live>true</live>
			<property>/fdm/jsbsim/speeds/v2-round</property>
		</text>
	</group>

</PropertyList>
